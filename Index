<!-- AEREO -->
<div id="aereo" class="section active">
  <input type="number" id="aereoLbs" placeholder="Ingrese libras">
  <button class="calc" onclick="calcAereo()">Calcular</button>
  <div class="result" id="resA"></div>
</div>

<!-- MARITIMO -->
<div id="maritimo" class="section">
  <input type="number" id="marLbs" placeholder="Ingrese libras">
  <button class="calc" onclick="calcMar()">Calcular</button>
  <div class="result" id="resM"></div>
</div>

