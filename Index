<script>
function openTab(tab){
  document.querySelectorAll('.section').forEach(s=>s.classList.remove('active'));
  document.querySelectorAll('.tabs button').forEach(b=>b.classList.remove('active'));

  document.getElementById(tab).classList.add('active');
  if(tab==='aereo') document.getElementById('tabA').classList.add('active');
  if(tab==='maritimo') document.getElementById('tabM').classList.add('active');
  if(tab==='volumen') document.getElementById('tabV').classList.add('active');
}

function calcAereo(){
  let lbs = parseFloat(document.getElementById("aereoLbs").value);
  if(!lbs) return;

  let rate = lbs > 20 ? 6.5 : 7;
  let total = lbs * rate;

  document.getElementById("resA").innerHTML =
    "Tarifa aplicada: $" + rate + " por lb<br>Total: $" + total.toFixed(2);
}

function calcMar(){
  let lbs = parseFloat(document.getElementById("marLbs").value);
  if(!lbs) return;

  let rate = 2.05;
  if(lbs > 500) rate = 1.5;
  else if(lbs > 300) rate = 1.9;
  else if(lbs > 100) rate = 2;

  let total = lbs * rate;

  document.getElementById("resM").innerHTML =
    "Tarifa aplicada: $" + rate + " por lb<br>Total: $" + total.toFixed(2);
}

function calcVol(){
  let L = parseFloat(document.getElementById("L").value);
  let W = parseFloat(document.getElementById("W").value);
  let H = parseFloat(document.getElementById("H").value);
  if(!L || !W || !H) return;

  let cubicaje = (L*W*H)/1728;
  let total = cubicaje * 10;

  document.getElementById("resV").innerHTML =
    "Cubicaje: " + cubicaje.toFixed(2) + " pies¬≥<br>Total: $" + total.toFixed(2);
}
</script>

